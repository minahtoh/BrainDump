<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/md_theme_dark_onSecondaryContainer">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/feelings_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/md_theme_dark_onPrimaryContainer"
            app:cardCornerRadius="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/feelings_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feelings"
                    android:textColor="@color/md_theme_dark_onPrimary"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageView
                    android:id="@+id/feelings_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/slightly_smiling_face_96"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/feelings_text"
                    android:layout_marginStart="10dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/md_theme_dark_onPrimaryContainer"
            app:cardCornerRadius="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/feelings_cv"
            app:layout_constraintTop_toBottomOf="@id/feelings_cv">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/dump_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dump"
                    android:textColor="@color/md_theme_dark_onPrimary"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/dump_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="!. today mof de kuuu toripe nigbati awonenejw wa nipe awon ma jeki"
                    android:textColor="@color/md_theme_dark_onTertiary"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@id/dump_date"
                    app:layout_constraintTop_toBottomOf="@+id/dump_text" />
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/dump_date"
                    android:textSize="11sp"
                    android:textColor="@color/md_theme_dark_onPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="23, may, 2029"
                    android:layout_marginEnd="15dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>